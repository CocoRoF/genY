# Geny Environment Variables
# Copy this file to .env and configure the values.

# =============================================================================
# Server Settings
# =============================================================================
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG_MODE=false

# =============================================================================
# Redis Settings (Required for Multi-pod environment)
# =============================================================================
# Enable Redis for multi-pod session sharing (true/false)
# When false or unset, local memory mode is used (single-pod only)
USE_REDIS=false

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# Claude Code Session Storage Path
# =============================================================================
# Default paths by OS:
#   - Windows: %LOCALAPPDATA%\claude_sessions (e.g., C:\Users\<user>\AppData\Local\claude_sessions)
#   - macOS/Linux: /tmp/claude_sessions
# CLAUDE_STORAGE_ROOT=/tmp/claude_sessions

# =============================================================================
# Anthropic API Settings
# =============================================================================
# API Key (Required for Claude API usage)
ANTHROPIC_API_KEY=your_api_key_here

# =============================================================================
# Claude Code Behavior Settings
# =============================================================================

# Default model (sonnet, opus, haiku or full model name)
# ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Extended Thinking token budget (default: 31999, set to 0 to disable)
# MAX_THINKING_TOKENS=31999

# =============================================================================
# Auto Permission Settings (⚠️ Autonomous Mode)
# =============================================================================

# Skip all permission prompts (required for autonomous mode)
# When enabled, Claude performs file modifications, command execution, git operations without confirmation
# Set to true for autonomous project creation and git push operations
CLAUDE_DANGEROUSLY_SKIP_PERMISSIONS=true

# =============================================================================
# Cost and Limit Settings
# =============================================================================

# Maximum API cost limit (USD)
# CLAUDE_MAX_BUDGET_USD=10.00

# Maximum agent turns limit
# CLAUDE_MAX_TURNS=50

# Bash command default timeout (milliseconds)
# BASH_DEFAULT_TIMEOUT_MS=30000

# Bash command maximum timeout (milliseconds)
# BASH_MAX_TIMEOUT_MS=600000

# =============================================================================
# Telemetry and Update Settings
# =============================================================================

# Disable auto-updater
DISABLE_AUTOUPDATER=1

# Disable error reporting
DISABLE_ERROR_REPORTING=1

# Disable telemetry
DISABLE_TELEMETRY=1

# Disable cost warnings
# DISABLE_COST_WARNINGS=1

# =============================================================================
# Proxy Settings (if needed)
# =============================================================================
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# =============================================================================
# AWS Bedrock Settings (when using Bedrock)
# =============================================================================
# CLAUDE_CODE_USE_BEDROCK=1
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# =============================================================================
# Google Vertex AI Settings (when using Vertex)
# =============================================================================
# CLAUDE_CODE_USE_VERTEX=1
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_CLOUD_REGION=us-central1

# =============================================================================
# GitHub Settings (for git push, PR creation)
# =============================================================================
# Personal Access Token - Generate at: https://github.com/settings/tokens
# Required scopes: repo, workflow (for full repository access)
GITHUB_TOKEN=your_github_token_here

# GitHub username (optional, for git config)
# GITHUB_USERNAME=your_username
